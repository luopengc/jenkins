<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<!-- 将bean包下所有的实体类引入配置文件中方便使用 -->
		<package name="com.mvn.entity" />
	</typeAliases>

	<mappers>
		<!-- 注册classesMapper.xml文件,classesMapper.xml位于com.mvn.xml这个包下,所以resource写成com/mvn/xml/classesMapper.xml -->
		<mapper resource="com/mvn/mapper/employeeMapper.xml" />
	</mappers>
</configuration>